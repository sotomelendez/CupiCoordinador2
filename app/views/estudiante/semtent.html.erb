<div id="header">
	<div id="menu" class="container">
		<ul>
			<li><%= link_to "HOME", root_path%></li>
			<li><%= link_to "PENSUM TENTATIVO", estudiante_pensumtent_path%></li>
			<li><%= link_to "SEMESTRE TENTATIVO", estudiante_semtent_path%></li>
			<li><%= link_to "CONSOLIDADO", coordinador_consolidado_path%></li>
			<li><%= link_to "ASIGNAR CUPOS", asignacion_seleccionar_path%></li>
		</ul>
	</div>
</div>
<div id="logo" class="container" align="center">
	<h1><%= link_to (image_tag 'logo.png'), root_path %></h1>
</div>
<div id="page" class="container" align="center">
	<div class="title">
		<h2>Materias tentativas para un semestre:</h2>
	</div>
	<br/>
	<table>
	<%= form_for :semestre, url: semestre_show_path do |m| %>
	<tr>
	<td><%= m.label "Que semestre desea ver: " %></td>
	<td><%= m.collection_select :semestre_id, @semestres, :id, :id_sem %></td>
	</tr>
	<tr>
	<td><%= m.label "Codigo de estudiante: " %></td>
	<td><%= m.text_field :cod_stud %></td>
	</tr>
	<tr>
	<td><%= m.submit "Ver semestre" %></td>
	</tr>
	<% end %>
	</table>
	<br/>
	<div class="title">
		<h2>Agregar materias a un pensum tentativo</h2>
	</div>
	<br/>
	<table>
	<%= form_for :semestre, url: semestre_new_path do |s| %>
	<tr>
	<td><%= s.label "Codigo del estudiante: " %></td>
	<td><%= s.text_field :cod_stud %></td>
	</tr>
	<tr>
	<td><%= s.label "Materia: " %></td>
	<td><%= s.collection_select :materia, @materias, :id, :lineamateria %></td>
	</tr>
	<tr>
	<td><%= s.label "Semestre: " %></td>
	<td><%= s.collection_select :semestre_id, @semestres, :id, :id_sem %></td>
	</tr>
	<tr>
	<td><%= s.submit "Agregar" %></td>
	</tr>
	<% end %>
	</table>
</div>	
