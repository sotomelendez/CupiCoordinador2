<div id="page" class="container" align="center">
	<!--<div id="content" align="center">-->
		<div class="title">
			<h2>Consolidado de informaci&oacute;n</h2>
		</div>
        <br />
		<table>
		<tr><%= form_for(:consolidado, url: coordinador_show_materia_path) do |f| %>
		<td><%= f.collection_select :materia, @materias, :id, :lineamateria %></td>
		<td><%= f.submit "Filtrar por materia" %></td>
		<% end %></tr>
		<tr></tr>
		<tr><%= form_for(:consolidado, url: coordinador_show_semestre_path) do |g| %>
		<td><%= g.collection_select :semestre_id, @semestres, :id, :id_sem %></td>
		<td><%= g.submit "Filtrar por semestre" %></td>
		<% end %></tr>
		</table>
		<br/>
		<table>
		<tr><%= form_for(:consolidado, url: coordinador_show_materia_semestre_path) do |s| %>
		<td><%= s.collection_select :materia, @materias, :id, :lineamateria %></td>
		<td><%= s.collection_select :semestre_id, @semestres, :id, :id_sem %></td>
		<td><%= s.submit "Filtrar por materia Y semestre" %></td>
		<% end %></tr>
		</table>
		<br/>
		<table border="1" width="800">
    	    <tr><th>Semestre</th><th>C&oacute;digo Materia</th><th>Nombre Materia</th><th>Estudiantes</th></tr>
			<% @busqueda.each do |r| %>
			<tr><td><%= r.id_sem %></td><td><%= r.idu %></td><td><%= r.nombre %></td><td><%= r.num_estud %></td></tr>
			<% end %>
        </table>
